{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "$components": ["./src/components"],
      "$components/*": ["./src/components/*"],
      "$queries": ["./src/queries"],
      "$queries/*": ["./src/queries/*"],
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$hooks": ["./src/hooks"],
      "$hooks/*": ["./src/hooks/*"],
      "$types": ["./src/types"],
      "$types/*": ["./src/types/*"],
      "$store": ["./src/store"],
      "$store/*": ["./src/store/*"],
      "$assets": ["./src/assets"],
      "$assets/*": ["./src/assets/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
